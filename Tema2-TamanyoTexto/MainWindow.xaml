<Window x:Class="Tema2_TamanyoTexto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema2_TamanyoTexto"
        mc:Ignorable="d"
        Title="Tamaño del Texto" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="textoCambiante" HorizontalAlignment="Center" Margin="0,46,0,0" TextWrapping="Wrap" Text="Desarrollo de Interfaces" VerticalAlignment="Top" Foreground="#FFFF4800" FontWeight="Bold" Width="720" Height="221" TextAlignment="Center" />
        <RadioButton x:Name="botonPequeño" Content="Pequeño" HorizontalAlignment="Center" Margin="-200,285,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked" Tag="botonPequeño"/>
        <RadioButton x:Name="botonMediano" Content="Mediano" HorizontalAlignment="Center" Margin="0,285,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked" Tag="botonMediano"/>
        <RadioButton x:Name="botonGrande" Content="Grande" HorizontalAlignment="Center" Margin="200,285,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked" Tag="botonGrande"/>

    </Grid>
</Window>
